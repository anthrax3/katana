{
  "plugins": [
    "transform-decorators-legacy",
    "transform-react-stateless-component-name",
    "transform-regenerator",
    "transform-runtime"
  ],
  "presets": [
    "react",
    "es2015",
    "stage-0"
  ],
  "env": {
    "development": {
      "plugins": [
        [
          "react-transform",
          {
            "transforms": [
              {
                "transform": "react-transform-hmr",
                "imports": ["react"],
                "locals": ["module"]
              }
            ]
          }
        ]
      ],
    }
  }
}
